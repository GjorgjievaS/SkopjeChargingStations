@model IEnumerable<Demo.Models.Charging_station>

@{
    ViewData["Title"] = "Tabular view";
}

<h2>Stanici za polnenje na elektricni avtomobili</h2>

<table class="table" id="tabela">
    <thead>
        <tr>
            <th>
                Opstina
            </th>
            <th>
                Adresa
            </th>
            <th>
                Operator
            </th>
            <th>
                Tip
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.municipality)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.operatorCS)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tip)
                </td>

                <td>
                    <a asp-action="Detali" asp-route-id="@item.id" class="btn btn-primary">Detali</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts{
    <script src="~/lib/datatables/js/dataTables.bootstrap.min.js"></script>
    <script src="~/lib/datatables/js/jquery.dataTables.js"></script>
    <script>
        $("#tabela").DataTable();
    </script>
}
